        <!-- 記事の入力 -->
        <%
          let postURL = /save/+revision;
          let urlValue = "";
          let titleValue = "";
          let thumbnailValue = "";
          let textValue = "";
          let readonly = false;
          if (page.url != null){
            urlValue = page.url;
            titleValue = page.item.title;
            thumbnailValue = page.item.thumbnail;
            textValue = page.item.text;
            readonly = true;
          }
        %>
        
        <form action=<%=postURL%> method="POST">
          <div class="form-group">
            <label for="exampleFormControlInput1">URL</label>
            <% if ( readonly == true ){ %>
              <input type="text" class="form-control" id="url" placeholder="URL" name="URL" value=<%=urlValue%> readonly>
            <% } else { %>
              <input type="text" class="form-control" id="url" placeholder="URL" name="URL" value=<%=urlValue%>>
            <% } %>
          </div> 
          <div class="form-group">
            <label for="exampleFormControlInput1">タイトル</label>
            <input type="text" class="form-control" id="postTitle" placeholder="タイトル" name="title" value=<%=titleValue%>>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">サムネイル</label>
            <input type="text" class="form-control" id="postThumbnail" placeholder="/file/image/xxxx.jpg" name="thumbnail" value=<%=thumbnailValue%>>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">記事</label>
            <textarea class="form-control" id="postText" rows="3" name="text" ><%= textValue %></textarea>
          </div>
          
          <input type="submit" value="送信">
        </form>
        
